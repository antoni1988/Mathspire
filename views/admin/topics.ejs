<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/header') %>
  <title>Admin - Topics</title>
</head>
<body>
  <div class="container mt-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Admin - Topics</li>
      </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Topic Management</h1>
      <a href="/admin/topics/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New Topic
      </a>
    </div>
    
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Existing Topics</h5>
        <div class="list-group">
          <% topics.forEach(function(topic) { %>
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1"><%= topic.name %></h6>
                  <small class="text-muted"><%= topic.description %></small>
                </div>
                <div class="btn-group">
                  <a href="/admin/topics/<%= topic.id %>/edit" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-edit me-1"></i>Edit Topic
                  </a>
                  <a href="/admin/topics/<%= topic.id %>/exercises" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-tasks me-1"></i>Manage Exercises
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/admin.js"></script>
  <%- include('../partials/footer') %>
</body>
</html>